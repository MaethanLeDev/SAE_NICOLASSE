<Window x:Class="SAE_NICOLASSE.Fenêtre.FenetreCreationCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_NICOLASSE.Fenêtre"
        mc:Ignorable="d"
        Title="FenetreCreationCommande" Height="450" Width="800">
    <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5">
        <StackPanel>
            <TextBlock Text="Détails de la Commande" FontSize="18" FontWeight="Bold" Foreground="#8B0000" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Fournisseur de la commande :" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding NomFournisseurCommandeEnCours}" Margin="5,0,0,0" FontWeight="Bold" Foreground="#0056b3"/>
            </StackPanel>

            <DataGrid x:Name="dgVinsDansLaCommande" ItemsSource="{Binding VinsDansLaCommande}" AutoGenerateColumns="False" MinHeight="100">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Vin" Binding="{Binding UnVin.NomVin}" Width="*"/>
                    <DataGridTextColumn Header="Quantité" Binding="{Binding QuantiteTotale}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Retirer" Command="{Binding DataContext.RetirerVinCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Annuler" Margin="5" Padding="15,5"/>
                <Button Content="Valider la Commande" Margin="5" Padding="15,5" FontWeight="Bold" Background="#8B0000" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
    
</Window>
