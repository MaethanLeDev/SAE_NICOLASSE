<Window
    x:Class="SAE_NICOLASSE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_NICOLASSE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <!-- Style pour les boutons de navigation -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A00C04"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5C0802"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>

        <!--  Bandeau haut  -->
        <Border
            Height="50"
            Background="#7C0A02"
            DockPanel.Dock="Top">
            <Grid Margin="10" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Logo  -->
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="NICOLAS" />

                <!--  Menu  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button Content="Recherche" Style="{StaticResource NavButtonStyle}" Click="MenuItem_Click" />
                    <Button Content="Commandes" Style="{StaticResource NavButtonStyle}" Click="MenuItem_Click_1" />
                    <Button Content="Suivi" Style="{StaticResource NavButtonStyle}" Click="MenuItem_Click_2" />
                </StackPanel>

                <!--  Profil  -->
                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Arthur"
                        Margin="0,0,5,0" />
                    <Ellipse
                        Width="24"
                        Height="24"
                        Fill="White" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Contenu principal  -->
        <ContentControl x:Name="MainContent" Margin="30">
            <!-- Contenu par défaut : page de recherche -->
            <StackPanel>
                <!--  Titre  -->
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Recherche de vins"
                    Margin="0,0,0,20" />

                <!--  Barre de recherche  -->
                <DockPanel Margin="0,0,0,20">
                    <TextBox
                        Width="400"
                        Height="30"
                        Margin="0,0,10,0"
                        Text="Rechercher un vin..." 
                        Foreground="Gray"
                        VerticalContentAlignment="Center"
                        Padding="10,0" />
                    <Button
                        Width="80"
                        Height="30"
                        Margin="0,0,10,0"
                        Content="🔍 Filtre"
                        Background="LightGray" />
                    <Button
                        Width="100"
                        Height="30"
                        Background="#7C0A02"
                        Content="Rechercher"
                        Foreground="White" />
                </DockPanel>

                <!--  Grille de vins  -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                    <ItemsControl Name="WineItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!--  Template pour chaque vin  -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Width="180"
                                    Margin="10"
                                    Background="White"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <StackPanel Margin="10">
                                        <Image
                                            Height="120"
                                            Source="{Binding Image}"
                                            Stretch="Uniform" />
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontWeight="Bold"
                                            Text="{Binding Nom}" />
                                        <TextBlock FontStyle="Italic" Text="{Binding Région}" />
                                        <TextBlock
                                            Margin="0,5,0,5"
                                            Foreground="Gray"
                                            Text="{Binding Stock}" />
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal"
                                            Margin="0,5,0,0">
                                            <Button
                                                Width="60"
                                                Height="25"
                                                Margin="0,0,5,0"
                                                Background="White"
                                                BorderBrush="#7C0A02"
                                                Content="Détails"
                                                Foreground="#7C0A02" />
                                            <Button
                                                Width="80"
                                                Height="25"
                                                Background="#7C0A02"
                                                Content="Demander"
                                                Foreground="White" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </ContentControl>

        <!--  Pied de page  -->
    </DockPanel>
</Window>