<UserControl x:Class="SAE_NICOLASSE.UserControls.UCAffichageVin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_NICOLASSE.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="180" Width="180" Height="250">
    <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="5" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="135"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <!-- Image du vin -->
            <Image Grid.Row="0"
                   Stretch="UniformToFill"
                   Margin="5"
                   Source="{Binding ImagePath, FallbackValue=Fichier/VinRouge.png}" />

            <!-- Nom du vin -->
            <TextBlock Grid.Row="1"
                       Text="{Binding NomVin}"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="5,5,5,0"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"/>

            <!-- Année -->
            <TextBlock Grid.Row="2"
                       Text="{Binding Millesime}"
                       FontSize="11"
                       FontWeight="Light"
                       FontStyle="Italic"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="2,0,5,5"/>

            <!-- Bas de la carte avec prix et bouton -->
            <Grid Grid.Row="3" Margin="5,0,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Prix en bas à gauche -->
                <TextBlock Grid.Column="0"
                           Text="{Binding PrixVin, StringFormat={}{0:C}}"
                           VerticalAlignment="Center"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="#2E7D32"
                           HorizontalAlignment="Left" Margin="9,0,0,0"/>

                <!-- Bouton Détail en bas à droite -->
                <Button Grid.Column="1"
                        Content="Détail"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        FontSize="11"
                        FontWeight="Medium"
                        Width="55" 
                        Height="28"
                        Foreground="White"
                        Cursor="Hand" Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#8B1538"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A91B47"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#6B0F2A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>