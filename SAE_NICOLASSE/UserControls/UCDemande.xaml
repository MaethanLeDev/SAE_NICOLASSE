<UserControl x:Class="SAE_NICOLASSE.UserControls.UCDemande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_NICOLASSE.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    

    <Grid>
        <DataGrid x:Name="dgDemandes" ItemsSource="{Binding LesDemandes}" AutoGenerateColumns="False" Margin="78,60,93,0" IsReadOnly="False" CellEditEnding="dgDemandes_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Numero Demande" Binding="{Binding NumDemande, ValidatesOnExceptions=true}" Width="*"/>
                <DataGridTextColumn Header="Vin" Binding="{Binding UnVin.NomVin, ValidatesOnExceptions=true}" Width="*"/>
                <DataGridTextColumn Header="Quantité" Binding="{Binding QuantiteDemande, ValidatesOnExceptions=true}" Width="*"/>
                <DataGridComboBoxColumn Header="Acceptation"
                        x:Name="colonneStatut"
                        SelectedItemBinding="{Binding Accepter, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridComboBoxColumn.ItemsSource>
                        <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <sys:String>En attente</sys:String>
                            <sys:String>Accepté</sys:String>
                            <sys:String>Refusé</sys:String>
                        </x:Array>
                    </DataGridComboBoxColumn.ItemsSource>
                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>