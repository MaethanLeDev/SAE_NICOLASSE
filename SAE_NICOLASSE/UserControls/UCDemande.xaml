<UserControl x:Class="SAE_NICOLASSE.UserControls.UCDemande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_NICOLASSE.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dgChiens" ItemsSource="{Binding LesChiens}" AutoGenerateColumns="False" Width="300" Margin="247,60,247,0"  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Numero Demande" Binding="{Binding Nom, ValidatesOnExceptions=true}" Width="*"/>
                <DataGridTextColumn Header="Maitre" Binding="{Binding Maitre, ValidatesOnExceptions=true}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
