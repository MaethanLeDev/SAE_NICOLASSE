<UserControl
    x:Class="SAE_NICOLASSE.UserControls.UCListeVin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_NICOLASSE.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE_NICOLASSE.Classe"
    d:DesignHeight="300"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Ligne du haut : Barre de recherche et filtres  -->
            <RowDefinition Height="*" />
            <!--  Ligne du bas : Catalogue des vins  -->
        </Grid.RowDefinitions>

        <!--  LIGNE DU HAUT : Barre de recherche et filtres  -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <!--  Barre de recherche  -->
                <ColumnDefinition Width="Auto" />
                <!--  Espacement  -->
                <ColumnDefinition Width="150" />
                <!--  Type de vin  -->
                <ColumnDefinition Width="Auto" />
                <!--  Espacement  -->
                <ColumnDefinition Width="150" />
                <!--  Appellation  -->
                <ColumnDefinition Width="Auto" />
                <!--  Espacement  -->
                <ColumnDefinition Width="100" />
                <!--  Année  -->
                <ColumnDefinition Width="Auto" />
                <!--  Espacement  -->
                <ColumnDefinition Width="100" />
                <!--  Prix max  -->
                <ColumnDefinition Width="Auto" />
                <!--  Espacement  -->
                <ColumnDefinition Width="Auto" />
                <!--  Bouton Filtres  -->
            </Grid.ColumnDefinitions>

            <!--  Barre de recherche  -->
            <Border
                Grid.Column="0"
                Background="White"
                BorderBrush="#8B1538"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Icône de recherche  -->
                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#8B1538"
                        Text="🔍" />

                    <!--  TextBox de recherche  -->
                    <TextBox
                        x:Name="txtRecherche"
                        Grid.Column="1"
                        Padding="5,8"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Foreground="#333333">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                <TextBlock
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Foreground="#AAAAAA"
                                                    IsHitTestVisible="False"
                                                    Text="Rechercher un vin...">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <!--  Espacement  -->
            <Border Grid.Column="1" Width="15" />

            <!--  Filtre Type de vin  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,3"
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="#666666"
                    Text="Type de vin" />
                <ComboBox
                    x:Name="cmbTypeVin"
                    Height="34"
                    Background="White"
                    BorderBrush="#8B1538"
                    BorderThickness="1"
                    FontSize="13"
                    Foreground="#333333">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton
                                                x:Name="ToggleButton"
                                                Grid.Column="2"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                ClickMode="Press"
                                                Focusable="False"
                                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="20" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <Path
                                                                                Grid.Column="1"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Data="M 0 0 L 4 4 L 8 0 Z"
                                                                                Fill="#8B1538" />
                                                                        </Grid>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                            <ContentPresenter
                                                x:Name="ContentSite"
                                                Margin="8,0,25,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                IsHitTestVisible="False" />
                                            <Popup
                                                x:Name="Popup"
                                                AllowsTransparency="True"
                                                Focusable="False"
                                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                                Placement="Bottom"
                                                PopupAnimation="Slide">
                                                <Grid
                                                    x:Name="DropDown"
                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                    SnapsToDevicePixels="True">
                                                    <Border
                                                        x:Name="DropDownBorder"
                                                        Background="White"
                                                        BorderBrush="#8B1538"
                                                        BorderThickness="1"
                                                        CornerRadius="4" />
                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                    <ComboBoxItem Content="Tous types" IsSelected="True" />
                    <ComboBoxItem Content="Rouge" />
                    <ComboBoxItem Content="Blanc" />
                    <ComboBoxItem Content="Rosé" />
                </ComboBox>
            </StackPanel>

            <!--  Espacement  -->
            <Border Grid.Column="3" Width="15" />

            <!--  Filtre Appellation  -->
            <StackPanel Grid.Column="4" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,3"
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="#666666"
                    Text="Appellation" />
                <ComboBox
                    x:Name="cmbAppellation"
                    Height="34"
                    Background="White"
                    BorderBrush="#8B1538"
                    BorderThickness="1"
                    FontSize="13"
                    Foreground="#333333">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton
                                                x:Name="ToggleButton"
                                                Grid.Column="2"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                ClickMode="Press"
                                                Focusable="False"
                                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="20" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <Path
                                                                                Grid.Column="1"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Data="M 0 0 L 4 4 L 8 0 Z"
                                                                                Fill="#8B1538" />
                                                                        </Grid>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                            <ContentPresenter
                                                x:Name="ContentSite"
                                                Margin="8,0,25,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                IsHitTestVisible="False" />
                                            <Popup
                                                x:Name="Popup"
                                                AllowsTransparency="True"
                                                Focusable="False"
                                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                                Placement="Bottom"
                                                PopupAnimation="Slide">
                                                <Grid
                                                    x:Name="DropDown"
                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                    SnapsToDevicePixels="True">
                                                    <Border
                                                        x:Name="DropDownBorder"
                                                        Background="White"
                                                        BorderBrush="#8B1538"
                                                        BorderThickness="1"
                                                        CornerRadius="4" />
                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                    <ComboBoxItem Content="Toutes appellations" IsSelected="True" />
                    <ComboBoxItem Content="Bordeaux" />
                    <ComboBoxItem Content="Bourgogne" />
                    <ComboBoxItem Content="Champagne" />
                    <ComboBoxItem Content="Côtes du Rhône" />
                    <ComboBoxItem Content="Loire" />
                    <ComboBoxItem Content="Languedoc" />
                </ComboBox>
            </StackPanel>

            <!--  Espacement  -->
            <Border Grid.Column="5" Width="15" />

            <!--  Filtre Année  -->
            <StackPanel Grid.Column="6" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,3"
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="#666666"
                    Text="Année" />
                <Border
                    Background="White"
                    BorderBrush="#8B1538"
                    BorderThickness="1"
                    CornerRadius="4">
                    <TextBox
                        x:Name="txtAnnee"
                        Height="32"
                        Padding="8,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="13"
                        Foreground="#333333">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                <TextBlock
                                                    Margin="3,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Foreground="#AAAAAA"
                                                    IsHitTestVisible="False"
                                                    Text="2020">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
            </StackPanel>

            <!--  Espacement  -->
            <Border Grid.Column="7" Width="15" />

            <!--  Filtre Prix maximum  -->
            <StackPanel Grid.Column="8" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,3"
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="#666666"
                    Text="Prix max (€)" />
                <Border
                    Background="White"
                    BorderBrush="#8B1538"
                    BorderThickness="1"
                    CornerRadius="4">
                    <TextBox
                        x:Name="txtPrixMax"
                        Height="32"
                        Padding="8,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="13"
                        Foreground="#333333">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                <TextBlock
                                                    Margin="3,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Foreground="#AAAAAA"
                                                    IsHitTestVisible="False"
                                                    Text="50">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
            </StackPanel>

            <!--  Espacement  -->
            <Border Grid.Column="9" Width="15" />

            <!--  Bouton Filtre  -->
            <Button
                x:Name="btnFiltre"
                Grid.Column="10"
                Padding="20,8"
                VerticalAlignment="Center"
                Background="#8B1538"
                BorderThickness="0"
                Content="Réinitialiser Filtres"
                Cursor="Hand"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="0"
                                        CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#A01A42" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#7A1235" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>

        <!--  LIGNE DU BAS : Catalogue des vins  -->
        <Border
            Grid.Row="1"
            Background="White"
            BorderBrush="#8B1538"
            BorderThickness="2"
            CornerRadius="8">
            <ScrollViewer Margin="10" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="itemControlVins">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type model:Vin}">
                            <local:UCAffichageVin />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>