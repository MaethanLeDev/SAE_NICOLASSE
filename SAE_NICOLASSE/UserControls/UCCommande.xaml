<UserControl x:Class="SAE_NICOLASSE.UserControls.UCCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_NICOLASSE.UserControls"
             xmlns:classe="clr-namespace:SAE_NICOLASSE.Classe"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#FCF9F9">

    <UserControl.Resources>
        <!-- Convertisseur pour afficher "Oui"/"Non" dans la ComboBox -->
        <classe:BoolToOuiNonConverter x:Key="MonConvertisseurBoolOuiNon"/>

        <!-- Style pour les boutons d'action (Supprimer, etc.) -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#8B1538"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A91B47"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour les boutons de suppression dans le DataGrid -->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#EF4444"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Gestion des Commandes" FontSize="28" FontWeight="Bold" Foreground="#1F2937" VerticalAlignment="Center"/>
            <Button Content="+ Créer une commande" Style="{StaticResource ActionButton}" Margin="20,0,0,0" Click="CreerCommande_Click"/>
        </StackPanel>

        <!-- DataGrid dans une bordure stylisée -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="1"/>
            </Border.Effect>
            <DataGrid x:Name="dgCommande" ItemsSource="{Binding}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="N° Commande" Binding="{Binding Numcommande}" Width="120"/>
                    <DataGridTextColumn Header="Employé" Binding="{Binding UnEmploye.Nom}" Width="*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding DateCommande, StringFormat='dd/MM/yyyy'}" Width="120"/>
                    <DataGridTextColumn Header="Prix Total" Binding="{Binding Prixtotal, StringFormat=C, ConverterCulture='fr-FR'}" Width="120"/>

                    <DataGridTemplateColumn Header="Validé" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Valider, Mode=OneWay}" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Action" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Supprimer" Style="{StaticResource DeleteButton}" Click="SupprimerCommande_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>