<UserControl
    x:Class="SAE_NICOLASSE.UserControls.UCCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:models="clr-namespace:SAE_NICOLASSE.Classe"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <models:BoolToOuiNonConverter x:Key="MonConvertisseurBoolOuiNon"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" 
                  x:Name="dgCommande" 
                  ItemsSource="{Binding LesCommandes}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="False" 
                  CellEditEnding="dgCommande_CellEditEnding">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Numero commande" Binding="{Binding Numcommande}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Prix Total" Binding="{Binding Prixtotal, StringFormat=C}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Date Commande" Binding="{Binding DateCommande, StringFormat='dd/MM/yyyy'}" IsReadOnly="True" Width="*"/>

                <DataGridComboBoxColumn Header="Validé"
                    SelectedItemBinding="{Binding Valider, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource MonConvertisseurBoolOuiNon}}">
                    <DataGridComboBoxColumn.ItemsSource>
                        <x:Array Type="sys:String">
                            <sys:String>Oui</sys:String>
                            <sys:String>Non</sys:String>
                        </x:Array>
                    </DataGridComboBoxColumn.ItemsSource>
                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" 
                Content="Créer une nouvelle commande" 
                HorizontalAlignment="Right" 
                Margin="0,10,0,0" 
                Padding="15,7"
                FontWeight="Bold"
                Command="{Binding CreerNouvelleCommandeCommand}"/>

    </Grid>
</UserControl>